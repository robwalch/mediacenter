{
  "name": "Media Center",
  "version": "1.0",
  "description": "Play media content in QuickTime Player or on Apple TV",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "There's a video on this page!",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["contentscript.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "icons": {
    "16": "icon_16.png",
    "48" : "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "contextMenus",
    "http://apple-tv.local:7000/",
    "http://apple-tv.local:7000/*"
  ],
  "manifest_version": 2
}